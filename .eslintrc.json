{
    "env": {
        "webextensions": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-extra-semi": "off",

        "no-unused-vars": [
            "error", {
                "argsIgnorePattern": "(^_)|(^\\w$)",
                "varsIgnorePattern": "(^_)"
            }
        ],

        // NOTE: 代码里确实有多处都用到了, 故而先沿用不细究
        "no-case-declarations": "off"
    },


    "overrides": [
        {
            "files": "**/*.worker.js",
            "env": {
                "worker": true
            }
        }
    ]
}
